<%= form_for @job do |f| %>
  <% if @job.errors.any? %>
    <div id="errors">
      <h2><%= pluralize(@job.errors.count, "error") %> prevented this job post from saving.</h2>
      <ul>
        <% @job.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.collection_select :category_id, Category.all, :id, :name, { prompt: "Choose a Category" } %>
  </p>
  
  <p>
   <%= f.label :title %><br>
   <%= f.text_field :title %>
  </p>

  <p>
   <%= f.label :description %><br>
   <%= f.text_area :description %>
  </p>

  <p>
   <%= f.label :company %><br>
   <%= f.text_field :company %>
  </p>

  <p>
   <%= f.label :url %><br>
   <%= f.text_field :url %>
  </p>

  <p>
   <%= f.submit %>
  </p>

<% end %>